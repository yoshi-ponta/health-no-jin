<div class="max-w-3xl mx-auto space-y-8">
  <header class="flex items-center justify-center">
    <h1 class="text-2xl font-bold">情報を編集</h1>
  </header>

  <section id="profile" class="p-4 rounded-xl bg-amber-50 shadow-md">
    <%= form_with model: @user, url: mypage_path, method: :patch, local: true,
          html: { multipart: true, data: { turbo: false } } do |f| %>
      <div class="grid gap-3">
        <div>
          <%= f.label :name, "あなたの名前", class: "block text-sm font-medium" %>
          <%= f.text_field :name, class: "mt-1 border rounded p-2 w-full" %>
        </div>

        <div>
          <%= f.label :introduction, "ひとこと", class: "block text-sm font-medium" %>
          <%= f.text_area :introduction, rows: 3, class: "mt-1 border rounded p-2 w-full resize-none", placeholder: "例）今日も散歩できた"%>
        </div>
        <div>
          <%= f.label :avatar, "アイコン画像", class: "block text-sm font-medium" %>
          <%= f.file_field :avatar, accept: "image/*", class: "mt-1 border rounded p-2 w-full" %>
        </div>

        <div class="flex items-center gap-2">
          <%= f.submit "保存する", class: "btn btn-primary btn-sm" %>
          <%= link_to "キャンセル", mypage_path, class: "text-sm underline" %>
        </div>
      </div>
    <% end %>
  </section>
</div>
