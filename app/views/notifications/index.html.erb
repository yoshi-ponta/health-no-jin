<div class="max-w-3xl mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold text-center pb-2 border-b border-base-300">通知</h1>

  <% if @notifications.blank? %>
    <div class="min-h-[50vh] grid place-items-center px-4">
      <p class="text-base-content/70 text-center mt-8">通知はありません</p>
    </div>
  <% else %>
    <ul class="space-y-3 mt-6">
      <% @notifications.each do |n| %>
        <li id="<%= dom_id(n) %>">
          <div class="card bg-base-100 shadow-sm border border-base-200">
            <div class="card-body py-4 px-5">
              <div class="flex items-start justify-between gap-4">
                <div class="space-y-1">

                  <div class="text-sm">
                    <% case n.notifiable %>
                    <% when Cheer %>
                    <% actor_name = n.actor&.name.presence || n.actor&.email&.sub(/@.*/, '') || "ユーザー" %>
                      <span><strong><%= actor_name %></strong>さんがあなたを応援しました。</span>
                    <% end %>
                  </div>

                  <div class="text-xs text-base-content/60">
                    <time><%= time_ago_in_words(n.created_at.in_time_zone("Asia/Tokyo")) %> 前</time>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
