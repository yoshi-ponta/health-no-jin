<div class="min-h-[70svh] flex items-center justify-center px-4 py-6">
  <div class="w-full max-w-[380px] md:max-w-[420px] mx-auto">
    <h1 class="text-xl font-bold mb-4"><%= t(".title") %></h1>
    <p class="text-sm text-gray-500 mb-6"><%= t(".description") %></p>

    <%= form_with scope: :user, url: user_session_path, method: :post, local: true, data: { turbo: false } do |f| %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm mb-1" do %>
          <span><%= t(".email") %></span>
        <% end %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full rounded border px-3 py-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm mb-1" do %>
          <span><%= t(".password") %></span>
        <% end %>

        <div class="relative">
          <%= f.password_field :password, id: "session_password", autocomplete: "current-password", class: "w-full rounded border px-3 py-2 pr-10" %>

          <button type="button" class="absolute inset-y-0 right-2 my-auto p-2 text-black" data-eye-toggle data-eye-target="session_password">
            <span data-eye-show><%= render "shared/icon_eye", class_name: "h-5 w-5" %></span>
            <span data-eye-hide class="hidden"><%= render "shared/icon_eye_off", class_name: "h-5 w-5" %></span>
          </button>
        </div>
      </div>

      <%= button_tag t(".submit"), type: "submit", class: "w-full rounded bg-black text-white py-2 font-semibold" %>
    <% end %>

    <div class="my-6 flex items-center gap-3">
      <hr class="grow border-gray-200">
      <span class="text-xs text-gray-400">または</span>
      <hr class="grow border-gray-200">
    </div>

    <%= render "shared/google_button", label: "Googleでログイン" %>

    <div class="mt-4 text-sm text-center">
      <%= link_to t(".forgot_password_link"), new_password_path(resource_name), data: { turbo: false }, class: "underline" %>
      <span class="mx-1">/</span>
      <%= link_to t(".signup_link"), new_registration_path(resource_name), class: "underline" %>
    </div>
  </div>
</div>
