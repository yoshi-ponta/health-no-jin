<% if resource.errors.any? %>
  <div class="mb-4 rounded-lg border p-3 text-sm border-red-200 bg-red-50 text-red-800" role="alert" aria-live="polite">
    <ul class="list-none pl-0 space-y-1">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
