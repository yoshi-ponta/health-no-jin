<div class="min-h-[70svh] flex items-center justify-center px-4 py-6">
  <div class="w-full max-w-[380px] md:max-w-[420px] mx-auto">
<h1 class="text-xl font-bold mb-4"><%= t(".title") %></h1>
<p class="text-sm text-gray-500 mb-6"><%= t(".description") %></p>

<%= form_with model: resource, url: session_path(resource_name), scope: resource_name do |f| %>
  <div class="mb-4">
    <%= f.label :email, t(".email"), class: "block text-sm mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
          class: "w-full rounded border px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, t(".password"), class: "block text-sm mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", required: true,
          class: "w-full rounded border px-3 py-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <label class="inline-flex items-center gap-2 mb-4">
      <%= f.check_box :remember_me %>
      <span class="text-sm"><%= t(".remember_me") %></span>
    </label>
  <% end %>

  <%= f.submit t(".submit"), class: "w-full rounded bg-black text-white py-2 font-semibold" %>
<% end %>

<div class="mt-4 text-sm">
  <%= link_to t(".forgot_password_link", default: "パスワードをお忘れですか？"),
              new_password_path(resource_name),
              class: "underline" %>
  <span class="mx-1">/</span>
  <%= link_to t(".signup_link", default: "新規登録"), new_registration_path(resource_name), class: "underline" %>
</div>
</div>
</div>