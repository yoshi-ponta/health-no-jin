<header class="bg-[linear-gradient(180deg,#F4A7B9_0%,#E07A94_100%)] text-white border-b border-white/20">
  <div class="container mx-auto px-4 h-14 flex items-center justify-between">
    <%= link_to "ヘルスノ陣", root_path, class: "font-bold" %>

    <nav class="flex items-center gap-3">
      <%= link_to t(".guide"), top_path,
                  class: "text-sm font-medium text-gray-700 hover:text-black hover:underline underline-offset-4" %>

      <% if user_signed_in? %>
        <%= button_to t(".logout"),
                destroy_user_session_path,
                method: :delete,
                form: { class: "inline", "data-turbo": "false" },
                class: "text-sm text-gray-600 hover:text-black bg-transparent p-0 underline" %>
      <% else %>
        <%= link_to t(".login") , new_user_session_path,
                    class: "text-sm text-gray-600 hover:text-black" %>
      <% end %>
    </nav>
  </div>
</header>