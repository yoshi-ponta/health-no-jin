<header data-theme="appbar" class="bg-gradient-to-b from-[var(--from)] to-[var(--to)] text-primary-content border-b border-accent/40">
  <div class="container mx-auto px-4 h-14 flex items-center justify-between">
    <%= link_to "ヘルスノ陣", root_path, class: "font-bold" %>

    <nav class="flex items-center gap-3">
      <%= link_to t(".guide"), top_path,
                  class: "text-sm font-medium text-gray-700 hover:text-black hover:underline underline-offset-4" %>

      <% if user_signed_in? %>
        <%= link_to notifications_path,
            class: "relative inline-flex items-center justify-center w-10 h-10 rounded-full hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white/60",
            aria: { label: "通知" } do %>
          <%= image_tag "icons/bell.svg",class: "w-[22px] h-[22px] pointer-events-none select-none" %>
        <% end %>

        <%= button_to t(".logout"),destroy_user_session_path,method: :delete,form: { class: "inline", "data-turbo": "false" },class: "text-sm text-gray-600 hover:text-black bg-transparent p-0 underline" %>
      <% else %>
        <%= link_to t(".login") , new_user_session_path,
                    class: "text-sm text-gray-600 hover:text-black" %>
      <% end %>
    </nav>
  </div>
</header>